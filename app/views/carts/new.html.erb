  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t(".ecommerce") %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @products.upPicture.url, size: Settings.image_home.medium %>
      <br>
      <br>
      <% if logged_in? %>
        <% if @rates.present? %>
          <div class="row">
            <section class="stats">
              <%= render @rates %>
            </section>
          </div>
        <% else %>
     <div class="row">
    <section class="stats">
      <%= render partial: "rates/rate", locals: {products: @products}%>
    </section>
  </div>
  <% end %>
  <% end %>
