      <div id ="some" class ="some">
      <p><% @products.rate.times do  %>
        <span class="glyphicon glyphicon-star">
      <% end %></p>
    </div>
      <input type="hidden" id="priceproduct" name="priceproduct" 
      value= <%= @products.productPrice %> />
        <h1 id = "price" ><%= @products.productPrice %></h1>   
      <h3><%= t(".number") %></h3>
      <%= render "shared/carts_form" %>
    </div>
  </div>
  <% if logged_in? %>
 
  <div class="row">
    <section class="stats">
      <%= render partial: "shared/comment_form", locals: {products: @products}%>
    </section>
  </div>
  <% end %>
  <div class="row">
    <h4 align="center"><%= t(".comment") %></h4>
   
      <ol class="entries" id="entries">
        <%= render @comments %>
      </ol>
   
  </div>
</div>

