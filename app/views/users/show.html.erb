<% provide(:title, @user.name) %>
<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-12 sidenav">
      <section class="user_info">
        <div class="col-sm-4 sidenav">
        </div> 
        <div class="col-sm-4 sidenav">
          <table class="table">
            <tr>
              <td><%= t ".name"%></td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td><%= t ".email"%></td>
              <td><%= @user.email%></td>
            </tr>
            <tr><td><%= link_to t(".edit_user"), edit_user_path(current_user), class: "btn btn-info" %></td>
           </tr>
          </table>
        </div>
        <div class="col-sm-4 sidenav">
        </div>
      </section>
    </div>
  </div>
</div>
