<% if object.errors.any? %>
  <div id="error-explanation">
    <div class="alert alert-danger">
      <%= t "error_msg" %>
      <%= pluralize object.errors.count, t("error") %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
