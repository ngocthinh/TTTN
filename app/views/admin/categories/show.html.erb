<% provide :title, @category.name %>
<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
      <h1>
        <%= @category.name %>
      </h1>
    </section>
  </aside>
<div class="col-md-10">
  <% if @category.products.any? %>
    <h3><%= t ".products" %>(<%= @category.products.count %>)</h3>
    <ol class="categorys">
    <table class="table table-striped">
       <%= render @products %>
    </table>
    </ol>
    <%= will_paginate @products %>
  <% end %>
  <%= link_to t(".add"), new_admin_product_path(cate_id: @category.id), class: "btn btn-success custom"%>
  </div>
</div>
