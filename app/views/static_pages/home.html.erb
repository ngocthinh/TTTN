<div class="container-fluid text-center">    
  <div class="row content">
   <div class="col-md-12 sidenav">
    <div class="col-sm-2 sidenav">
    </div>
    <div class="col-sm-8 sidenav">
      <div class="col-sm-4 sidenav">
        <%= render "shared/form_search" %>
      </div>
      <div class="col-sm-8 sidenav">
        <table class="table table-hover">
          <%= render @products %>
        </table>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">Ecommerce
            <small>06</small>
          </h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
         <%= image_tag "2.png", :size => "750x200" %>
       </div>
     </div>
     <div class="row">
      <div class="col-lg-12">
        <h3 class="page-header">Hot Products</h3>
      </div>
      <div class="col-lg-12">
       <% @products_hot.each do |product| %>
       <div class="col-sm-3 col-xs-3">
         <%= image_tag product.upPicture.url, :size=>"150x100" if product.upPicture? %>
       </div>    
       <% end %>
       <hr>
       <br>
       <% @products_hot.each do |product| %>
       <div class="col-sm-3 col-xs-3">
        <%= link_to product.productname, new_cart_path(product_id: product.id) %>
        <br>
        Price : <%= product.productPrice %> $
      </div>        
      <% end %>
    </div>     
  </div>
  <div class="col-sm-2 sidenav">
  </div>
</div>
</div>
</div>