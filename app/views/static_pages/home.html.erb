<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-lg-12">
      
    </div>
   
    <div class="row">
      <div class="col-md-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <%= image_tag "ferrari.jpg", size: "100x100" %>
        <div class="carousel-caption">
          <h3>Buy $</h3>
          <p>Shopping cart.</p>
        </div>
      </div>
      <div class="item">
        <%= image_tag "mercedes.jpg", size: "100x100" %>
        <div class="carousel-caption">
          <h3>More Car</h3>
        </div>
      </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button"
      data-slide="prev"> <span class="glyphicon glyphicon-chevron-left"
      aria-hidden="true"></span> <span class="sr-only">Previous</span>
    </a> <a class="right carousel-control" href="#myCarousel" role="button"
      data-slide="next"> <span
      class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

      </div>
    </div>
     <div class="row">
     <br>
     <br>
     
     <div class="col-md-12 sidenav">
      <div class="col-sm-4 sidenav">
      </div>
      <div class="col-sm-8 sidenav">
        <%= render "shared/form_search" %>
        <br>
      </div>
    </div>
     </div>
    <div class="row">
      <div class="col-lg-12">
        <h3 class="page-header"><%= t(".products_hot") %></h3>
      </div>
      <div class="col-lg-12">
        <% @products_hot.each do |product| %>
          <div class="col-sm-3 col-xs-3">
            <%= image_tag product.upPicture.url, size: Settings.image_home.small %>
          </div>    
        <% end %>
        <hr>
        <br>
        <% @products_hot.each do |product| %>
          <div class="col-sm-3 col-xs-3">
            <%= link_to product.productname, new_cart_path(product_id: product.id) %>
            <br>
            <p> Price : <%= product.productPrice %> $ </p>
          </div>        
        <% end %>
      </div>     
    </div>
    <div class="row">
    <h3 class="page-header"> <%= t(".new_products") %> </h3>
    </div>
    <div class="row">
    <div class="pre-scrollable">
    <% @products.each do |product| %>
      <div class="col-sm-12">
          <div class="col-xs-2">
             <p align="left" ><%= link_to product.productname, new_cart_path(product_id: product.id) %></p>
          </div>
          <div class="col-xs-2">
            <p align="left" ><%= product.productPrice %> $ </p>
          </div>
          <div class="col-xs-3">
            <%= image_tag product.upPicture.url, size: Settings.image_home.small %>
          </div>
          <div class="col-xs-5" align = "left">
           
          </div>
          </div>
    <% end %>
    </div>
    </div>
    <div class="col-sm-2 sidenav">
    </div>
  </div>  
</div>
