<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" >
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>                        
          </button>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li><%= link_to t(".home"), root_path %></li>
            <ul class="nav navbar-nav navbar-right">
            <li><%= link_to '<i class="glyphicon glyphicon-shopping-cart"></i>'.html_safe, carts_path %></li>
             </ul>
          </ul>
          <% if logged_in? %>
          <ul class="nav navbar-nav navbar-right">
             <% if current_user.is_admin? %>
              <li><%= link_to t(".categories"), admin_categories_path %></li>
              <li><%= link_to t(".suggests"), admin_suggests_path %></li>
              <li><%= link_to t(".products"), admin_products_path %></li>
              <li><%= link_to t(".orders"), admin_orders_path %></li>
              <li><%= link_to t(".charts"), admin_charts_path %></li>
              <% else %>
              <li><%= link_to '<i class="glyphicon glyphicon-shopping-cart"> Shopping Cart</i>'.html_safe, orders_path %></li>
              <li><%= link_to '<i class="glyphicon glyphicon-pencil"> Suggest </i>'.html_safe, suggests_path %></li>
              <% end %>
            <li><%= link_to t(".profile"), user_path(@current_user) %></li>
            <li><%= link_to t(".signout"), logout_path, method: "delete" %> 
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          </ul>
          <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t(".signin"), login_path %></li>
            <li><%= link_to t(".signup"), signup_path %></li>
          </ul> 
          <% end %>
       </div>
     </div>
   </nav>
 </div>
</header>
